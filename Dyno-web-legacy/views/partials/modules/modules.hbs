<div id="modules" class="tab-content">
	<h3 class="title is-4">Modules</h3>

    {{>moduleheader}}

	<div class="flex-container">
	{{#each modules}}
		{{#unless this.adminEnabled}}
            {{#unless this.hide}}
            <div class="control module-toggle is-pulled-left">
                <label class="checkbox">
                    <input id="{{this.module}}" class="module" type="checkbox" value="{{this.module}}"{{#if this.enabled}} checked="checked"{{/if}}>
                    {{this.friendlyName}}
                </label>
                <p class="help-text">{{this.description}}</p>
            </div>
            {{/unless}}
		{{/unless}}
	{{/each}}
	<span class="is-clearfix"></span>
	</div>
</div>